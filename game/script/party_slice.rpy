label party_slice:

    scene bg office_party

    # Внутренние мысли Германа в зависимости от clarity
    if clarity >= 5:
        n "Корпоратив. И всё это выглядит… неправильно."
        n "Украшения будто принесли не из магазина, а из какого-то чужого чулана."
        n "Я не чувствую праздника. Я чувствую декорацию."
    elif clarity >= 2:
        n "Корпоратив. Вроде обычная история, но что-то не сходится."
        n "Слишком мало людей. Слишком мало шума."
        n "И почему-то мне хочется держать руки в карманах."
    else:
        n "Корпоратив. Ну наконец-то что-то живое."
        n "Гирлянды, мишура, даже ёлка — смешно."
        n "Пускай. Праздник есть праздник."

    # Осмотр доступен только если clarity > 1
    if clarity > 1:
        call screen inspect_party

    # Появляется Даша
    show dasha_party

    d "Ну что… как тебе вечер?"

    # Выбор ответа Германа зависит от clarity
    if clarity <= 1:
      menu:
          "Похуистично-кайфовый (−1 clarity, +1 bond)":
              $ clarity -= 1
              $ bond += 1
              $ _party_answer = "chill"
              n "— Нормально. Даже прикольно."
              n "— Хоть не этот вечный офисный траур. Пускай будет мишура."
      
          "Безэмоциональный (без изменений)":
              $ _party_answer = "flat"
              n "— Нормально."
              n "— Я тут, смотрю."

    elif clarity <= 4:
      menu:
          "Безэмоциональный (без изменений)":
              $ _party_answer = "flat"
              n "— Нормально."
              n "— Похоже на корпоратив."
      
          "Настороженный (+1 clarity, −1 bond)":
              $ clarity += 1
              $ bond -= 1
              $ _party_answer = "wary"
              n "— Странно всё."
              n "— Людей мало. И как будто… не те люди."

    else:
      menu:
          "Настороженный (+1 clarity, −1 bond)":
              $ clarity += 1
              $ bond -= 1
              $ _party_answer = "wary"
              n "— Я не понимаю, что тут празднуют."
              n "— И почему мне кажется, что мы просто закрываем какую-то дыру декорациями."
      
          "Шизонутый (+2 clarity, −2 bond)":
              $ clarity += 2
              $ bond -= 2
              $ _party_answer = "psycho"
              n "— Скажи честно: это проверка?"
              n "— Тут кто-то должен прийти? Или уже пришёл?"
              n "— Потому что всё выглядит так, будто меня сюда поставили — и ждут, когда я сделаю правильный шаг."

    # Ответ Даши перед фразой “а что если…”
    if (_party_answer == "chill" or _party_answer == "flat"):
        if bond >= 2:
            d "Я рада. Правда."
            d "Ты как будто… умеешь не усложнять."
        else:
            d "Поняла."
            d "Ну и хорошо."

    else:
        if bond >= 0:
            d "Ясно."
            d "Тогда просто будь здесь. Без лекций."
        else:
            d "Ой, ну началось."
            d "Ты всегда такой, да?"

    # Главная фраза
    d "А что если я тебя люблю?"

    # Реакция Германа на фразу (по твоему правилу: тает на паранойе, сдержанно иначе)
    if clarity >= 5:
        n "Слова попадают прямо в голову, минуя смысл."
        n "Я должен был насторожиться сильнее — но вместо этого…"
        n "…внутри всё мягко проваливается."
        n "Как будто мне дали разрешение перестать думать."
    else:
        n "Я слышу это — и почему-то не знаю, куда деть глаза."
        n "Слишком рано. Слишком прямо."
        n "Я делаю вид, что не растаял. И получается почти убедительно."

    return
