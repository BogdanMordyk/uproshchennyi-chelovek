label home_slice:

    scene bg home_tv

    play home_tv "audio/ambience/home_tv.ogg" fadein 1.0

    # Внутренние мысли Германа по clarity
    if clarity < 2:
        n "Тепло растекается по телу, как будто мир стал проще."
        n "Телевизор шуршит. Вино — тянется. Всё правильно."
        n "Можно просто лежать. Можно ничего не решать."
    elif clarity <= 5:
        n "Что-то не так."
        n "Я пытаюсь поймать мысль, но она распадается на куски."
        n "Словно я просыпаюсь — и снова проваливаюсь."
    else:
        n "Мне страшно."
        n "Страх не объясняется словами — он просто есть."
        n "Как будто я стою на краю, и кто-то тихо подталкивает."

    # Осмотр доступен, если clarity > 2
    if clarity > 2:
        call screen inspect_home

    show dasha_home

    # Ветка 1: bond > 2 — Даша спасает / уводит
    if bond > 2:
        d "Надо убираться отсюда. Как можно тише и быстрее."
        d "Я потом тебе всё объясню."

        if clarity > 9:
            menu:
                "Крикнуть":
                    n "Горло срывается само."
                    n "Крик не помогает — он только делает воздух гуще."
                    scene black
                    n "Конец."
                    return
        elif clarity > 1:
            menu:
                "Хорошо. Уходим.":
                    n "Я киваю — и чувствую, как тело снова становится моим."
                    scene black
                    n "Конец."
                    return
        else:
            menu:
                "Отстань. Мне и тут хорошо.":
                    n "Слова выходят лениво, как из сна."
                    n "Я даже не уверен, что сказал их вслух."
                    scene black
                    n "Конец."
                    return

    # Ветка 2: bond <= 2 — Даша держит линию
    else:
        d "Как ты?"

        if bond > 9:
            menu:
                "Что ты вообще такое? Я всё понял.":
                    n "Я произношу это — и сам не верю, что смог."
                    scene black
                    n "Конец."
                    return
        elif bond >= 2:
            menu:
                "Нормально.":
                    n "Слова слишком простые для того, что происходит."
                    scene black
                    n "Конец."
                    return
                "Я всё понял.":
                    n "Я говорю это тихо."
                    n "Как будто боюсь, что воздух донесёт мои слова туда, куда не надо."
                    scene black
                    n "Конец."
                    return
        else:
            menu:
                "Нормально.":
                    n "Я говорю это автоматически."
                    n "Как будто меня спросили, который час."
                    scene black
                    n "Конец."
                    return
